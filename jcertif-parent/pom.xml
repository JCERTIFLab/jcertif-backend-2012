                        </goals>
                        <configuration>
                            <rules>
                                <bannedDependencies>
                                    <excludes>
										<!-- Lister ici les dépendances à exclure sur l'ensemble du projet -->
                                        <exclude>commons-logging:commons-logging</exclude>
                                    </excludes>
                                </bannedDependencies>
                            </rules>
                            <fail>true</fail>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
